<!-- 加载遮罩层和动画 -->
<view class="loading-mask" wx:if="{{showLoading}}" catchtouchmove="preventTouchMove">
  <!-- 模糊背景层 -->
  <view class="blur-background"></view>
  <!-- 加载动画 -->
  <view class="loading">
    <image 
      class="loading-gif" 
      src="/assets/loading.gif" 
      mode="aspectFit"
    ></image>
  </view>
</view>
