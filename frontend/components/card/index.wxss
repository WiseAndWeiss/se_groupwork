/* card-component.wxss （组件自身的样式文件）*/
.card {
    background-color: #fff;
    border-radius: 20rpx;
    padding: 24rpx;
    margin-bottom: 16rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
    position: relative;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  
  .card:active {
    transform: translateY(-2rpx);
    box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  }
  
  .title {
    font-size: 30rpx;
    font-weight: 600;
    color: #333;
    line-height: 1.4;
    margin-bottom: 12rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .time {
    font-size: 22rpx;
    color: #999;
    margin-bottom: 16rpx;
    display: inline-block;
  }
  
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 12rpx;
    margin-bottom: 20rpx;
    max-width: 100%;
  }
  
  .tag {
    font-size: 22rpx;
    color: #7b2ff7;
    background-color: rgba(123, 47, 247, 0.08);
    padding: 6rpx 16rpx;
    border-radius: 30rpx;
    white-space: nowrap;
  }
  
  .buttons {
    display: flex;
    justify-content: flex-end;
    gap: 12rpx;
    margin-top: 8rpx;
  }
  
  .buttons button {
    padding: 8rpx 24rpx;
    font-size: 24rpx;
    border-radius: 30rpx;
    line-height: 1.2;
    height: auto;
  }
  
  .buttons button:first-child {
    background-color: transparent;
    color: #7b2ff7;
    border: 2rpx solid #7b2ff7;
  }
  
  .buttons button:last-child {
    background-color: #7b2ff7;
    color: #fff;
    border: none;
  }
  
  .buttons button:active {
    opacity: 0.9;
    transform: scale(0.96);
  }
  
  .floating-window {
    background-color: #fff;
    border-radius: 16rpx;
    padding: 24rpx;
    margin-top: 16rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
    border-top: 1rpx solid #f5f5f5;
  }
  
  .desc {
    font-size: 24rpx;
    color: #666;
    line-height: 1.6;
    margin-bottom: 16rpx;
    white-space: pre-line;
  }
  
  .floating-window a {
    font-size: 24rpx;
    color: #7b2ff7;
    text-decoration: underline;
    text-underline-offset: 4rpx;
  }
  
  .floating-window a:active {
    color: #6219e0;
  }