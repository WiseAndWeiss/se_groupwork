.card {
    background-color: #fff;
    border-radius: 20rpx;
    padding: 28rpx 28rpx 12rpx 28rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.05);
  }
  
  /* 头部布局 */
  .header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 16rpx;
  }
  
  /* 标题：默认截断 1 行 */
  .title {
    font-size: 30rpx;
    font-weight: 600;
    color: #222;
    flex: 1;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* 展开后去掉截断 */
  .title.expanded {
    display: block;            /* 覆盖 -webkit-box */
    -webkit-line-clamp: unset;
    -webkit-box-orient: unset;
    overflow: visible;
    white-space: normal;
  }
  
  /* 图标组 */
  .icon-group {
    display: flex;
    gap: 18rpx;
    margin-left: 20rpx;
    align-items: center;
  }
  
  /* svg 图标尺寸 */
  .icon {
    width: 44rpx;
    height: 44rpx;
    display: block;
  }
  
  /* 整体布局：标签在左，footer 在右 */
  .bottom-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 12rpx;
  }
  
  /* 标签容器：左对齐，换行显示 */
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 12rpx;
    max-width: 65%; /* 限制宽度，防止挤到右边 */
  }
  
  /* 单个标签 */
  .tag {
    font-size: 22rpx;
    color: #7b2ff7;
    background-color: rgba(123, 47, 247, 0.08);
    padding: 6rpx 16rpx;
    border-radius: 30rpx;
    white-space: nowrap;
  }
  
  /* footer 区域在右边 */
  .footer {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 8rpx;
    font-size: 24rpx;
    color: #999;
    white-space: nowrap;
  }
  
  /* 展开内容浮层基础样式 */
  .floating-window {
      background-color: #fff;
      padding: 20rpx 10rpx 0rpx 10rpx;
      margin-top: 16rpx;
      border-top: 4rpx solid #f1f1f1;
      max-height: 0;
      overflow: hidden;
      opacity: 0;
      transition: all 0.3s ease-out;
    }
    
    /* 展开状态 */
    .floating-window.expanded {
      max-height: 1000rpx; 
      opacity: 1;
      padding: 20rpx 10rpx 0rpx 10rpx;
      margin-bottom: 18rpx;
    }
    
    /* 收起状态 */
    .floating-window.collapsed {
      max-height: 0;
      opacity: 0;
      padding: 0 10rpx;
    }
    
    /* 内容文字动画 */
    .desc, .original-link, .key-info {
      opacity: 0;
      transform: translateY(10rpx);
      transition: all 0.3s ease-out;
    }
    
    /* 展开时文字延迟出现 */
    .floating-window.expanded .desc,
    .floating-window.expanded .original-link,
    .floating-window.expanded .key-info {
      opacity: 1;
      transform: translateY(0);
      transition: all 0.4s ease-out 0.1s; /* 延迟0.1s开始动画 */
    }
    
    /* 收起，文字立即开始消失 */
    .floating-window.collapsed .desc,
    .floating-window.collapsed .original-link,
    .floating-window.collapsed .key-info {
      opacity: 0;
      transform: translateY(20rpx);
      transition: all 0.3s ease-out; 
    }
    
    /* 动画过程中禁用交互 */
    .floating-window.animating {
      pointer-events: none;
    }
    
    .key-info {
      font-size: 24rpx;
      color: #333;
      line-height: 1.6;
      margin-bottom: 16rpx;
      font-weight: 550;
    }
  
    .desc {
      font-size: 24rpx;
      color: #666;
      line-height: 1.6;
      margin-bottom: 6rpx;
      white-space: pre-line;
    }
    
    .original-link {
      color: #1890ff;
      font-size: 24rpx;
      text-decoration: none;
      display: inline-block;
      transition: all 0.3s ease;
      text-align: center;
    }
    
    .original-link:active {
      transform: scale(0.98);
    }
  
  /* 收藏按钮*/
  .star-container {
      position: relative;
      display: inline-block;
      width: 44rpx;
      height: 44rpx;
    }
    
    /* 星星缩放动画：先缩后放 */
    @keyframes starScale {
      0% { transform: scale(1); }
      30% { transform: scale(1.3); } /* 放大1.5倍*/
      70% { transform: scale(0.7); } /* 放大1.5倍*/
      100% { transform: scale(1); } /* 恢复原大小 */
    }
    
    /* 背景圆环扩散动画 */
    @keyframes circleSpread {
      0% {
        transform: scale(0);
        opacity: 0.8; /* 初始半透明 */
      }
      100% {
        transform: scale(2); /* 扩散到2倍大小 */
        opacity: 0; /* 逐渐消失 */
      }
    }
    
    /* 四周飞溅圆点动画 */
    @keyframes dotSplash {
      0% {
        transform: scale(0) translate(-50%, -50%);
        opacity: 1;
      }
      100% {
        transform: scale(4) translate(-50%, -50%); /* 放大+飞溅 */
        opacity: 0;
      }
    }
    
    /* 动画触发类：点击时添加 */
    .star-container.animate .icon-star {
      animation: starScale 0.4s ease-in-out;
    }
    
    /* 背景圆环（伪元素::after） */
    .star-container::after {
      content: "";
      position: absolute;
      left: 0%;
      top: 0%;
      transform: translate(-50%, -50%);
      width: 100%;
      height: 100%;
      border-radius: 50%;
      background: #591bb7; /* 黄色半透明背景 */
      opacity: 0; 
      pointer-events: none; 
    }
    
    /* 飞溅圆点（伪元素::before）：用box-shadow生成4个圆点 */
    .star-container::before {
      content: "";
      position: absolute;
      left: 50%;
      top: 50%;
      width: 3rpx;
      height: 3rpx;
      border-radius: 50%;
      background: #591bb7; /* 圆点 */
      box-shadow: 
      0 -12rpx 0 #591bb7,   /* 顶点1：正上方（角度90°）→ x=0, y=-15 */
      11rpx -4rpx 0 #591bb7,  /* 顶点2：右上方（角度18°）→ x≈14.1, y≈4.6 → 取整(14,5) */
      -11rpx -4rpx 0 #591bb7, /* 顶点3：左上方（角度162°）→ x≈-14.1, y≈4.6 → 取整(-14,5) */
      7rpx 10rpx 0 #591bb7, /* 顶点4：右下方（角度306°）→ x≈8.8, y≈-12.2 → 取整(9,-12) */
      -7rpx 10rpx 0 #591bb7;
      opacity: 0; /* 默认隐藏 */
      pointer-events: none; /* 不影响点击 */
    }
    
    /* 动画触发时：显示圆环和圆点并执行动画 */
    .star-container.animate::after {
      animation: circleSpread 0.3s ease-in-out;
    }
    .star-container.animate::before {
      animation: dotSplash 0.3s ease-in-out;
    }
  
  /* 收藏提示弹窗 */
  .fav-tip-popup {
    position: fixed;
    bottom: 180rpx;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2000;
    animation: slideUpTip 0.3s ease-out;
  }
  
  @keyframes slideUpTip {
    from {
      opacity: 0;
      transform: translateX(-50%) translateY(20rpx);
    }
    to {
      opacity: 1;
      transform: translateX(-50%) translateY(0);
    }
  }
  
  .tip-content {
    background: #fff;
    border-radius: 20rpx;
    padding: 24rpx 30rpx;
    box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16rpx;
    min-width: 400rpx;
  }
  
  .tip-text {
    font-size: 32rpx;
    color: #333;
    font-weight: 550;
  }
  
  .modify-btn {
    font-size: 30rpx;
    color: #7b2ff7;
    background: rgba(123, 47, 247, 0.1);
    padding: 12rpx 32rpx;
    border-radius: 30rpx;
    border: none;
    transition: all 0.2s;
  }
  
  .modify-btn:active {
    background: rgba(123, 47, 247, 0.2);
    transform: scale(0.98);
  }
  
  /* 收藏夹选择弹窗 */
  .collection-select-popup {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 2001;
  }
  
  .select-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.5);
    animation: fadeIn 0.3s ease-out;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  .select-content {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100vw;
    max-height: 50vh;
    background: #fff;
    border-top-left-radius: 30rpx;
    border-top-right-radius: 30rpx;
    padding: 0;
    box-sizing: border-box;
    animation: slideUpSelect 0.3s ease-out;
    box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
  }
  
  @keyframes slideUpSelect {
    from {
      transform: translateY(100%);
    }
    to {
      transform: translateY(0);
    }
  }
  
  .select-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #222;
    padding: 30rpx 30rpx 20rpx 30rpx;
    text-align: center;
    border-bottom: 1rpx solid #f5f5f5;
  }
  
  .collection-scroll {
    flex: 1;
    height: 0;
    width: 100%;
    margin-bottom: 40rpx;
  }
  
  .collection-list {
    padding: 20rpx 30rpx 20rpx 30rpx;
    display: flex;
    flex-direction: column;
    gap: 20rpx;
  }
  
  .collection-item {
    padding: 24rpx 20rpx;
    background: #fff;
    border: 2rpx solid #e8e8e8;
    border-radius: 16rpx;
    font-size: 28rpx;
    color: #333;
    transition: all 0.2s;
    display: block;
    text-align: left;
  }
  
  .collection-item:active {
    background: #f8f8f8;
    transform: scale(0.98);
  }
  
  .collection-item.active {
    border-color: #7b2ff7;
    background: rgba(123, 47, 247, 0.05);
    color: #7b2ff7;
    font-weight: 500;
  }
  
  .collection-item .default-tag {
    font-size: 22rpx;
    color: #7b2ff7;
    background: rgba(123, 47, 247, 0.08);
    padding: 4rpx 12rpx;
    border-radius: 20rpx;
    margin-left: 12rpx;
  }
    