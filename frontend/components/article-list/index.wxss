/* 卡片区域样式 */
.card-area {
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
    margin-top: 30rpx;
    margin-bottom: 140rpx;
  }
  
  /* 卡片滚动容器 */
  .card-scroll {
    width: 100%;
    box-sizing: border-box;
    padding: 0;
    height: calc(100vh - 870rpx); /* 默认高度，可以通过属性覆盖 */
  }

  /* 空状态提示 */
  .empty-tip {
    text-align: center;
    padding: 40rpx;
    color: #999;
    font-size: 28rpx;
  }
  
  /* 卡片列表容器 */
  .card-list {
    display: flex;
    flex-direction: column;
  }
  
  /* 预加载区域样式 */
.preload-area {
    width: 100%;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .empty-preload {
    width: 100%;
    height: 100%;
  }
  /* 加载动画样式 */
  .loading-container {
    display: flex;
    align-items: center;
    gap: 12rpx;
  }
  .loading-icon {
    width: 40rpx;
    height: 40rpx;
  }
  .loading-text {
    font-size: 28rpx;
    color: #999;
  }
  /* 状态提示样式 */
  .no-more-tip, .empty-tip {
    text-align: center;
    padding: 20rpx 0;
    color: #999;
    font-size: 28rpx;
  }