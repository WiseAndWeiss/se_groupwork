/* 卡片区域样式 */
.card-area {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
  margin-bottom: 140rpx;
}

/* 卡片滚动容器 */
.card-scroll {
  width: 100%;
  box-sizing: border-box;
  padding: 0;
  height: calc(100vh - 870rpx);
  /* 默认高度，可以通过属性覆盖 */
}

/* 空状态提示 */
.empty-tip {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 卡片列表容器 */
.card-list {
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: visible;
}

/* 预加载区域样式 */
.preload-area {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
}

.empty-preload {
  width: 100%;
  height: 100%;
}

/* 加载动画样式 */
.loading-container {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 状态提示样式 */
.no-more-tip,
.empty-tip {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 28rpx;
}

.load-more-btn {
  font-size: 28rpx;
  color: #409eff;
  font-weight: 500;
  text-align: center;
}

/* 收藏夹选择弹窗（页面级别，避免被scroll-view裁剪） */
.collection-select-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 10000;
  transform: translateZ(0);
  -webkit-transform: translateZ(0);
}

.select-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  animation: fadeIn 0.3s ease-out;
  will-change: opacity;
  z-index: 9999;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.select-content {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  max-height: 50vh;
  min-height: 200rpx;
  background: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  padding: 0;
  box-sizing: border-box;
  animation: slideUpSelect 0.3s ease-out;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  will-change: transform;
  overflow: hidden;
  z-index: 10001;
  transform: translateZ(0);
  -webkit-transform: translateZ(0);
}

@keyframes slideUpSelect {
  from {
    transform: translate3d(0, 100%, 0);
  }
  to {
    transform: translate3d(0, 0, 0);
  }
}

.select-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #222;
  padding: 30rpx 30rpx 20rpx 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.collection-scroll {
  flex: 1;
  width: 100%;
  margin-bottom: 40rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.collection-list {
  padding: 20rpx 30rpx 20rpx 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.collection-item {
  padding: 24rpx 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  transition: all 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.collection-item.active {
  background: #f0e8ff;
  color: #591bb7;
  font-weight: 600;
}

.default-tag {
  margin-left: 10rpx;
  padding: 4rpx 12rpx;
  background: #591bb7;
  color: #fff;
  border-radius: 8rpx;
  font-size: 20rpx;
}

.empty-collection-tip {
  padding: 40rpx 20rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.debug-info {
  padding: 20rpx;
  background: #f0f0f0;
  color: #666;
  font-size: 24rpx;
  text-align: center;
}