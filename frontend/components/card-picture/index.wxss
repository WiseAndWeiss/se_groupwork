/* 公众号卡片容器：横向滚动适配+轻微立体感 */
.card-picture-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 160rpx; /* 固定宽度，适配横向滚动 */
    padding: 16rpx 8rpx;
    background-color: #fff;
    border-radius: 16rpx; /* 圆润圆角，和文章卡片呼应 */
    box-shadow: 0 3rpx 12rpx rgba(0, 0, 0, 0.04); /* 柔和阴影，不突兀 */
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  
  /* 卡片点击反馈：轻微上浮+加深阴影 */
  .card-picture-container:active {
    transform: translateY(-3rpx);
    box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.08);
  }
  
  /* 公众号头像：圆形+边框装饰 */
  .official-avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%; /* 圆形头像，符合公众号视觉习惯 */
    border: 3rpx solid rgba(123, 47, 247, 0.1); /* 淡紫色边框，呼应主题 */
    object-fit: cover; /* 防止头像变形 */
    background-color: #f5f5f5; /* 占位背景，避免图片加载前空白 */
  }
  
  /* 公众号名称：居中+换行控制 */
  .official-name {
    margin-top: 12rpx;
    font-size: 24rpx;
    color: #333;
    font-weight: 500;
    text-align: center;
    line-height: 1.3;
    /* 最多显示2行，超出省略 */
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    width: 100%;
    padding: 0 4rpx;
  }