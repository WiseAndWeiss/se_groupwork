/* 卡片基础样式 */
.todo-card {
    padding: 20rpx;
    margin: 16rpx;
    background: #fff;
    border-radius: 12rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
    transition: transform 0.2s;
  }
  .todo-card:active {
    transform: scale(0.98); /* 点击卡片反馈 */
  }
  
  /* 标题+状态行 */
  .todo-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16rpx;
  }
  .todo-title {
    font-size: 28rpx;
    font-weight: 500;
    color: #333;
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .todo-completed {
    color: #999;
    text-decoration: line-through;
  }
  .todo-status {
    font-size: 22rpx;
    padding: 4rpx 12rpx;
    border-radius: 20rpx;
    flex-shrink: 0;
  }
  .status-done {
    background: #f0f9ff;
    color: #1890ff;
  }
  .status-undone {
    background: #fff7e6;
    color: #faad14;
  }
  
  /* 内容行 */
  .todo-row {
    display: flex;
    margin-bottom: 12rpx;
    font-size: 24rpx;
    align-items: flex-start;
  }
  .todo-label {
    color: #666;
    min-width: 100rpx;
    flex-shrink: 0;
  }
  .todo-value {
    color: #333;
    flex: 1;
    word-break: break-all;
  }
  .todo-content-text {
    line-height: 1.6;
  }
  
  /* 弹窗样式（核心：可视窗口居中，适配小程序） */
  .modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 9999; /* 层级高于所有页面元素 */
    animation: maskFade 0.2s ease-out forwards;
  }
  
  /* 关键修复：50vh/50vw 基于可视窗口居中 */
  .modal-container {
    position: fixed;
    top: 50vh;
    left: 50vw;
    transform: translate(-50%, -50%);
    width: 85%;
    max-width: 600rpx; /* 限制最大宽度，适配平板/大屏 */
    z-index: 10000; /* 高于遮罩层 */
    max-height: 90vh; /* 防止弹窗超出屏幕 */
    overflow-y: auto; /* 内容过多时滚动 */
    animation: modalPop 0.3s ease-out forwards;
    box-sizing: border-box;
  }
  
  .modal-content {
    background: #fff;
    border-radius: 12rpx;
    padding: 30rpx;
    box-sizing: border-box;
  }
  
  .modal-item {
    display: flex;
    flex-direction: column;
    margin-bottom: 20rpx;
  }
  .modal-label {
    font-size: 26rpx;
    color: #333;
    margin-bottom: 8rpx;
  }
  .modal-input {
    font-size: 24rpx;
    padding: 12rpx;
    border: 1rpx solid #e5e5e5;
    border-radius: 8rpx;
    box-sizing: border-box;
  }
  .desc-input {
    min-height: 120rpx;
    resize: none;
    line-height: 1.6;
  }
  .modal-text {
    font-size: 24rpx;
    color: #333;
    line-height: 1.6;
  }
  .modal-btn-group {
    display: flex;
    justify-content: flex-end;
    gap: 16rpx;
    margin-top: 10rpx;
  }
  .modal-btn {
    font-size: 24rpx;
    padding: 12rpx 24rpx;
    border-radius: 8rpx;
    transition: opacity 0.2s;
  }
  .modal-btn:active {
    opacity: 0.8; /* 点击反馈 */
  }
  .edit-btn {
    background: #e6f7ff;
    color: #1890ff;
  }
  .save-btn {
    background: #f0f9ff;
    color: #1890ff;
  }
  .exit-btn {
    background: #f5f5f5;
    color: #666;
  }
  .delete-btn {
    background: #fff2f0;
    color: #f5222d;
  }
  
  /* 日期选择器占位符样式 */
  .placeholder-style {
    color: #999;
  }
  
  /* 弹窗动画 */
  @keyframes maskFade {
    0% { opacity: 0; }
    100% { opacity: 1; }
  }
  @keyframes modalPop {
    0% {
      opacity: 0;
      transform: translate(-50%, -45%) scale(0.95);
    }
    100% {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1);
    }
  }

  /* 关联文章链接样式 */
.article-link {
    color: #0066cc; /* 蓝色，模拟超链接 */
    text-decoration: underline; /* 下划线 */
    font-size: 14px;
    line-height: 1.5;
  }
  
  /* 链接点击态 */
  .article-link-hover {
    color: #004999; /* 深一点的蓝色 */
    background-color: #f0f8ff; /* 轻微背景色反馈 */
  }
  