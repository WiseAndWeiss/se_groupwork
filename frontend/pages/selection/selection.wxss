page {
  background-color: rgba(239, 239, 239, 0.6);
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.custom-navbar {
  position: fixed;
  width: 100%;
  height: 170rpx;
  background: #ffffff;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  z-index: 1000;
  color: #591bb7;
  font-weight: 600;
}
.navbar-title {
  font-size: 35rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}
.add-icon {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 30rpx;
  bottom: 17rpx;
}
  
  /* 排序按钮区域 */
  .sort-bar {
    display: flex;
    padding: 190rpx 20rpx 20rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #eee;
  }
  
  .sort-btn {
    flex: 1;
    text-align: center;
    padding: 12rpx 0;
    font-size: 26rpx;
    font-weight: 600;
    color: #666;
    border-radius: 30rpx;
    margin: 0 8rpx;
  }
  
  /* 选中排序按钮样式（紫色主题） */
  .sort-btn.active {
    background-color: #7b2ff7;
    color: #fff;
    font-weight: 600;
  }
  
  /* 搜索栏整体 */
.search-bar {
  display: flex;
  align-items: center;
  width: 92%;
  margin: 20rpx auto 20rpx;
  gap: 16rpx;
}

/* 输入框 */
.search-box {
  flex: 1;
}
.search-inner {
  display: flex;
  align-items: center;
  background-color: #fff;
  border: 2rpx solid #7b2ff7;
  border-radius: 50rpx;
  height: 70rpx;
  padding: 0 24rpx;
}
.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 14rpx;
}
.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  border: none;
  background: transparent;
}
.search-placeholder {
  color: #aaa;
}
  
/* 卡片列表 */
.card-scroll {
  flex: 1;
  margin-top: 20rpx;
}
.card-list {
  width: 90%;
  margin: 0 auto 140rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.empty-tip {
  text-align: center;
  color: #aaa;
  font-size: 26rpx;
  padding: 80rpx 0;
}
  
/* 公众号列表布局 */
.official-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  padding: 30rpx 30rpx 160rpx 0; /* 顶部和底部空出导航栏 */
  box-sizing: border-box;
  background-color: #f7f7f7;
}

/* 确保 card-picture 组件宽度适合三列布局 */
.official-list card-picture {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  margin-left: 30rpx;
}
  

  .tab-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 120rpx;
    background-color: #fff;
    display: flex;
    justify-content: space-around;
    align-items: center;
    border-top: 1rpx solid #eee;
    box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
    z-index: 100;
  }
  
  .tab-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #666;
    font-size: 26rpx;
  }
  
  .tab-item .menu-icon {
    width: 40rpx;
    height: 40rpx;
    margin-bottom: 6rpx;
    filter: brightness(0) saturate(100%) invert(62%) sepia(0%) saturate(0%) hue-rotate(201deg) brightness(88%) contrast(85%);
  }
  
  .tab-item.active {
    color: #7b2ff7;
    font-weight: bold;
  }
  
  .tab-item.active .menu-icon {
    filter: brightness(0) saturate(100%) invert(33%) sepia(74%) saturate(6221%) hue-rotate(253deg) brightness(96%) contrast(101%);
  }