/* 底部导航栏 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid #eee;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #666;
  font-size: 26rpx;
}

/* 底部导航图标样式 */
.tab-item .menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 6rpx;
  filter: brightness(0) saturate(100%) invert(62%) sepia(0%) saturate(0%) hue-rotate(201deg) brightness(88%) contrast(85%);
  /* 默认灰色 */
}

/* 选中态图标改为紫色 */
.tab-item.active {
  color: #7b2ff7;
  font-weight: bold;
}

.tab-item.active .menu-icon {
  filter: brightness(0) saturate(100%) invert(33%) sepia(74%) saturate(6221%) hue-rotate(253deg) brightness(96%) contrast(101%);
}