page {
  background-color: rgba(239, 239, 239, 0.6);
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.custom-navbar {
  position: fixed;
  width: 100%;
  height: 170rpx;
  background: #ffffff;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  z-index: 1000;
  color: #591bb7;
  font-weight: 600;
}
.navbar-title {
  font-size: 35rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}
.alllist-icon {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 30rpx;
  bottom: 17rpx;
}

/* 搜索栏整体 */
.search-bar {
  display: flex;
  align-items: center;
  width: 92%;
  margin: 200rpx auto 20rpx;
  gap: 16rpx;
}

/* 输入框 */
.search-box {
  flex: 1;
}
.search-inner {
  display: flex;
  align-items: center;
  background-color: #fff;
  border: 2rpx solid #7b2ff7;
  border-radius: 50rpx;
  height: 70rpx;
  padding: 0 24rpx;
}
.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 14rpx;
}
.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  border: none;
  background: transparent;
}
.search-placeholder {
  color: #aaa;
}

.filter-icon {
  width: 50rpx;
  height: 50rpx;
}

/* 卡片列表 */
.card-scroll {
  flex: 1;
  margin-top: 20rpx;
}
.card-list {
  width: 90%;
  margin: 0 auto 140rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.empty-tip {
  text-align: center;
  color: #aaa;
  font-size: 26rpx;
  padding: 80rpx 0;
}

/* ====================== */
/* ✅ 标签筛选悬浮窗样式 */
/* ====================== */
.filter-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 999;
  backdrop-filter: blur(2rpx);
}
.filter-popup {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  height: 60%;
  background-color: #fff;
  border-radius: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  z-index: 1000;
  padding: 24rpx;
  box-sizing: border-box;
}
.popup-header {
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}
.popup-back-btn {
  width: 80rpx;
  height: 50rpx;
  color: #7b2ff7;
  font-size: 26rpx;
  background: transparent;
  border: none;
}
.popup-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}
.tags-scroll {
  width: 100%;
  height: calc(100% - 80rpx);
}
.tags-wrapper {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.group-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #666;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
  border-left: 3rpx solid #7b2ff7;
}
.tag-row {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.tag-item {
  width: calc(50% - 8rpx);
  padding: 16rpx 0;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #333;
  text-align: center;
}
.tag-selected {
  background-color: #7b2ff7;
  color: #fff;
}

