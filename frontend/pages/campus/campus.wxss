/* 搜索框+功能按钮 组合栏（不变） */
.search-bar {
    display: flex;
    align-items: center;
    width: 90%;
    margin: 20rpx auto;
    gap: 12rpx;
  }
  
  .search-box {
    flex: 1;
  }
  
  .search-input {
    width: 100%;
    height: 72rpx;
    padding: 0 20rpx;
    background-color: #fff;
    border-radius: 36rpx;
    font-size: 26rpx;
    color: #333;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  }
  
  .search-placeholder {
    color: #999;
    font-size: 26rpx;
  }
  
  /* 按钮样式（不变） */
  .filter-btn {
    width: 140rpx;
    height: 72rpx;
    line-height: 72rpx;
    background-color: #fff;
    color: #7b2ff7;
    border: 2rpx solid #7b2ff7;
    font-size: 26rpx;
    border-radius: 36rpx;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .expand-btn {
    width: 120rpx;
    height: 72rpx;
    line-height: 72rpx;
    background-color: #7b2ff7;
    color: #fff;
    font-size: 26rpx;
    border-radius: 36rpx;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  /* 卡片列表+无数据提示（不变） */
  .card-list {
    width: 90%;
    margin: 0 auto 140rpx;
    display: flex;
    flex-direction: column;
    gap: 16rpx;
  }
  
  .empty-tip {
    text-align: center;
    padding: 80rpx 0;
    color: #999;
    font-size: 26rpx;
  }
  
  /* 核心新增：遮罩层（背景暗化） */
  .filter-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5); /* 灰度50%，背景变暗 */
    z-index: 999; /* 遮罩层级低于悬浮窗，高于页面内容 */
    backdrop-filter: blur(2rpx); /* 可选：轻微模糊背景，提升质感 */
  }
  
  /* 核心优化：悬浮窗（居中+圆角+固定宽高） */
  .filter-popup {
    position: fixed;
    top: 50%; /* 垂直居中 */
    left: 50%; /* 水平居中 */
    transform: translate(-50%, -50%); /* 精准居中 */
    width: 80%; /* 悬浮窗宽度（占屏幕80%） */
    height: 60%; /* 悬浮窗高度（占屏幕60%） */
    background-color: #fff;
    border-radius: 30rpx; /* 四角圆角（加大更明显） */
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15); /* 增强阴影，突出悬浮窗 */
    z-index: 1000; /* 悬浮窗层级最高 */
    padding: 24rpx;
    box-sizing: border-box;
  }
  
  /* 悬浮窗头部（不变） */
  .popup-header {
    display: flex;
    align-items: center;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #f0f0f0;
    margin-bottom: 20rpx;
  }
  
  .popup-back-btn {
    width: 80rpx;
    height: 50rpx;
    line-height: 50rpx;
    background-color: transparent;
    color: #7b2ff7;
    font-size: 26rpx;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .popup-title {
    flex: 1;
    text-align: center;
    font-size: 32rpx;
    font-weight: 600;
    color: #333;
  }
  
  /* 标签滚动容器（适配悬浮窗高度） */
  .tags-scroll {
    width: 100%;
    height: calc(100% - 80rpx); /* 减去头部高度，占满悬浮窗剩余空间 */
  }
  
  /* 标签分组容器（不变） */
  .tags-wrapper {
    display: flex;
    flex-direction: column;
    gap: 24rpx;
  }
  
  .group-title {
    font-size: 28rpx;
    font-weight: 500;
    color: #666;
    margin-bottom: 16rpx;
    padding-left: 8rpx;
    border-left: 3rpx solid #7b2ff7;
  }
  
  /* 标签行（每行2个，不变） */
  .tag-row {
    display: flex;
    flex-wrap: wrap;
    gap: 16rpx;
  }
  
  /* 标签项（优化点击区域，确保可点击） */
  .tag-item {
    width: calc(50% - 8rpx);
    padding: 16rpx 0;
    background-color: #f5f5f5;
    border-radius: 30rpx;
    font-size: 24rpx;
    color: #333;
    text-align: center;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    cursor: pointer;
    pointer-events: auto; /* 确保可点击，避免被遮挡 */
    z-index: 1001; /* 标签层级高于悬浮窗 */
  }
  
  /* 标签选中态（不变） */
  .tag-selected {
    background-color: #7b2ff7;
    color: #fff;
  }
  
  /* 标签点击反馈（新增，确认点击生效） */
  .tag-hover {
    background-color: #eee;
  }
  
  /* 底部导航栏（不变） */
  .tab-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 120rpx;
    background-color: #fff;
    display: flex;
    justify-content: space-around;
    align-items: center;
    border-top: 1rpx solid #eee;
    box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
    z-index: 100;
  }
  
  .tab-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #666;
    font-size: 26rpx;
  }
  
  .tab-item .menu-icon {
    width: 40rpx;
    height: 40rpx;
    margin-bottom: 6rpx;
    filter: brightness(0) saturate(100%) invert(62%) sepia(0%) saturate(0%) hue-rotate(201deg) brightness(88%) contrast(85%);
  }
  
  .tab-item.active {
    color: #7b2ff7;
    font-weight: bold;
  }
  
  .tab-item.active .menu-icon {
    filter: brightness(0) saturate(100%) invert(33%) sepia(74%) saturate(6221%) hue-rotate(253deg) brightness(96%) contrast(101%);
  }