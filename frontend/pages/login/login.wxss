/* 页面整体样式 */
page {
    background-color: rgba(239, 239, 239, 0.6);
    height: 100vh;
    display: flex;
    flex-direction: column;
  }
  
  /* 顶部标题栏 */
  .header {
    background: linear-gradient(90deg, #7b2ff7 0%, #9c4dff 100%);
    padding: 120rpx 20rpx 70rpx;
    text-align: center;
    color: #fff;
  }
  
  .title-container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .app-name {
    font-size: 52rpx;
    font-weight: bold;
    margin-top: 22rpx;
  }
  
  .app-desc {
    font-size: 30rpx;
    opacity: 0.9;
    margin-top: 22rpx;
  }
  
  .app-icon {
    width: 160rpx;
    height: 160rpx;
  }
  
  /* 登录/注册切换按钮 */
  .tab-container {
    display: flex;
    justify-content: center;
    background-color: #fff;
    border-radius: 40rpx;
    margin: 50rpx auto 50rpx;
    width: 80%;
    box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }
  
  .tab {
    flex: 1;
    text-align: center;
    padding: 20rpx 0;
    font-size: 32rpx;
    font-weight: 500;
    color: #666;
    transition: all 0.2s ease;
  }
  
  .tab.active {
    background: linear-gradient(90deg, #7b2ff7 0%, #9c4dff 100%);
    color: #fff;
    font-weight: bold;
  }
  
  /* 表单容器 */
  .form-container {
    margin: 0 60rpx;
    background-color: transparent;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  /* 输入框组 */
  .input-group {
    width: 100%;
    margin-bottom: 30rpx;
  }
  
  .input {
    padding: 26rpx 30rpx;
    border: none;
    border-radius: 50rpx;
    font-size: 30rpx;
    background-color: #fff;
    box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  }
  
  /* 提交按钮 */
  .submit-btn {
    margin-top: 20rpx;
    background: linear-gradient(90deg, #7b2ff7 0%, #9c4dff 100%);
    color: #fff;
    border-radius: 50rpx;
    padding: 28rpx 60rpx;
    font-size: 34rpx;
    font-weight: bold;
    box-shadow: 0 8rpx 20rpx rgba(123, 47, 247, 0.4);
    transition: all 0.2s ease;
    box-sizing: border-box;
  }
  
  .btn-hover {
    opacity: 0.8;
    transform: scale(0.98);
  }
  
  /* 密码强度提示样式 */
  .password-strength {
    width: 100%;
    margin: -10rpx 0 20rpx 0; /* 上下间距 */
    font-size: 26rpx; /* 字体大小一致 */
    color: #666;
    padding: 0 10rpx; 
    box-sizing: border-box;
  }
  
    /* 密码强度文字 */
  .strength-text-row {
    display: flex;
    align-items: center;
    margin-bottom: 10rpx;
    font-size: 26rpx;
  }
    
  /* 密码强度 */
  .strength-label {
    color: #666;
    margin-right: 15rpx;
  }
  
  /* 密码强度值 */
  .strength-value {
    font-weight: 500;
  }
  
    /* 不同强度颜色 */
  .strength-default { color: #999; }   /* 未输入 - 灰色 */
  .strength-weak { color: #e64340; }   /* 弱 - 红色 */
  .strength-medium { color: #ff9500; } /* 中 - 橙色 */
  .strength-strong { color: #34c759; } /* 强 - 绿色 */
  
  .form-scroll-container {
    flex: 1;
    padding-bottom: 200rpx;
    box-sizing: border-box;
  }
  
  /* 密码强度横条容器 */
  .strength-bar-container {
    width: 100%;
    margin-top: 20rpx;
  }
  
  /* 强度横条 */
  .strength-bar {
    display: flex;
    width: 100%;
    height: 16rpx;
    background-color: #f0f0f0;
    border-radius: 8rpx;
    overflow: hidden;
    margin-bottom: 10rpx;
  }
  
  /* 横条分段 */
  .bar-segment {
    flex: 1;
    height: 100%;
    margin: 0 2rpx;
    border-radius: 8rpx;
    transition: all 0.3s ease;
    opacity: 0.3;
  }
  
  /* 弱强度段 */
  .bar-weak {
    background-color: #e64340;
  }
  
  /* 中强度段 */
  .bar-medium {
    background-color: #ff9500;
  }
  
  /* 高强度段 */
  .bar-strong {
    background-color: #34c759;
  }
  
  /* 激活状态 */
  .bar-segment.active {
    opacity: 1;
    transform: scaleY(1.2);
  }
  
  /* 强度标签 */
  .strength-labels {
    display: flex;
    justify-content: space-between;
    width: 100%;
    box-sizing: border-box;
  }
  
  .strength-label-item {
    font-size: 24rpx;
    color: #999;
    text-align: center;
    flex: 1;
    opacity: 0.3;
  }
  
  .strength-label-item.active {
    font-size: 24rpx;
    color: #999;
    text-align: center;
    flex: 1;
    opacity: 1;
  }
  
  /* 加载动画容器 */
  .loading-animation-container {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 9999;
    pointer-events: none;
    animation: fadeInScale 0.3s ease-out;
  }
  
  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: translate(-50%, -50%) scale(0.8);
    }
    to {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1);
    }
  }
  
  /* 加载动画 GIF */
  .loading-gif {
    width: 300rpx;
    height: 300rpx;
    display: block;
  }