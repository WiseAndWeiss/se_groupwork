page {
  background-color: rgba(239, 239, 239, 0.6);
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.custom-navbar {
  position: fixed;
  width: 100%;
  height: 170rpx;
  background: #ffffff;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  z-index: 1000;
  color: #591bb7;
  font-weight: 600;
}
.navbar-title {
  font-size: 35rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}
.return-icon {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 30rpx;
  bottom: 17rpx;
}

  /* 搜索栏整体 */
  .search-bar {
    display: flex;
    align-items: center;
    width: 92%;
    margin: 200rpx auto 20rpx;
    gap: 16rpx;
  }
  
  /* 输入框 */
  .search-box {
    flex: 1;
  }
  .search-inner {
    display: flex;
    align-items: center;
    background-color: #fff;
    border: 2rpx solid #7b2ff7;
    border-radius: 50rpx;
    height: 70rpx;
    padding: 0 24rpx;
  }
  .search-icon {
    width: 36rpx;
    height: 36rpx;
    margin-right: 14rpx;
  }
  .search-input {
    flex: 1;
    font-size: 26rpx;
    color: #333;
    border: none;
    background: transparent;
  }
  .search-placeholder {
    color: #aaa;
  }