  /* 自定义dot容器：定位到轮播图底部，居中 */
.custom-dot-container {
    position: absolute;
    bottom: 15rpx; 
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    gap: 8rpx; 
    z-index: 10; 
  }

  /* 普通dot样式：更小的圆形 */
.custom-dot {
    width: 6rpx; 
    height: 6rpx;
    border-radius: 50%; 
    background-color: #ccc; 
    transition: all 0.3s ease; 
  }
  
  /* 激活态dot：两端半圆的小横条 */
