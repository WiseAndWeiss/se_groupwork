page {
  background-color: rgba(239, 239, 239, 0.6);
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.custom-navbar {
  position: fixed;
  width: 100%;
  height: 170rpx;
  background: #ffffff;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  z-index: 1000;
  color: #591bb7;
  font-weight: 600;
}

.navbar-title {
  font-size: 35rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.return-icon {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 30rpx;
  bottom: 17rpx;
}

/* 删除全部按钮 */
.delete-all-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 250rpx;
  height: 80rpx;
  background: #ff4a4a;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(247, 47, 47, 0.3);
  z-index: 1001;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

.delete-all-btn.hidden {
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
}

.delete-btn-text {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
}

/* 历史记录容器 */
.history-container {
  padding: 200rpx 0rpx 0rpx;
}

.card-scroll {
  max-height: calc(100vh - 340rpx);
  /* 导航栏高度 */
}

/* 空状态 */
.empty-history {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.empty-tip {
  font-size: 24rpx;
  color: #999;
}

/* 滑动删除样式 */
.swipe-item {
  position: relative;
  overflow: hidden;
  border-radius: 16rpx;
}

.swipe-actions {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  width: 120rpx;
  /* 两个按钮的总宽度 */
  padding-left: 20rpx;
  align-items: center;
}

.swipe-btn-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  padding: 0 20rpx;
}

.icon-circle {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.cancel-circle {
  background: rgba(255, 255, 255, 0.95);
  border: 2rpx solid #d8b4fe;
}

.delete-circle {
  background: rgba(255, 255, 255, 0.95);
  border: 2rpx solid #fecaca;
}

.swipe-icon {
  width: 36rpx;
  height: 36rpx;
}

.cancel-circle .swipe-icon {
  filter: invert(48%) sepia(90%) saturate(1300%) hue-rotate(230deg) brightness(90%) contrast(85%);
}

.delete-circle .swipe-icon {
  filter: invert(40%) sepia(60%) saturate(1200%) hue-rotate(340deg) brightness(90%) contrast(95%);
}

/* 点击效果 */
.icon-circle:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.cancel-circle:active {
  background: rgba(216, 180, 254, 0.1);
}

.delete-circle:active {
  background: rgba(254, 202, 202, 0.1);
}

.btn-text {
  font-size: 22rpx;
  color: #666;
  font-weight: 500;
}

.swipe-content {
  position: relative;
  background: white;
  transition: transform 0.3s ease;
  z-index: 10;
  border-radius: 16rpx;
}

/* 滑动状态类 */
.swipe-open {
  transform: translateX(-120rpx);
}

.swipe-closing {
  transform: translateX(0);
}