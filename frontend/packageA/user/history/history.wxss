page {
  background-color: rgba(239, 239, 239, 0.6);
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.custom-navbar {
  position: fixed;
  width: 100%;
  height: 170rpx;
  background: #ffffff;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  z-index: 1000;
  color: #591bb7;
  font-weight: 600;
}

.navbar-title {
  font-size: 35rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.return-icon {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 30rpx;
  bottom: 17rpx;
}

/* 删除全部按钮 */
.delete-all-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 250rpx;
  height: 80rpx;
  background: #ff4a4a;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(247, 47, 47, 0.3);
  z-index: 1001;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

.delete-all-btn:active {
  transform: translateX(-50%) scale(0.98);
  background: #ff2a2a;
}

.delete-all-btn.hidden {
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
}

.delete-btn-text {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
}

/* 历史记录容器 */
.history-container {
  padding: 170rpx 0rpx 0rpx;
}


/* 空状态 */
.empty-history {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.empty-tip {
  font-size: 24rpx;
  color: #999;
}
