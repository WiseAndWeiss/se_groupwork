page {
    background-color: rgba(239, 239, 239, 0.6);
    height: 100vh;
    display: flex;
    flex-direction: column;
  }
  
  /* 顶部导航栏 */
  .custom-navbar {
    position: fixed;
    width: 100%;
    height: 170rpx;
    background: #ffffff;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding-bottom: 20rpx;
    box-sizing: border-box;
    z-index: 1000;
    color: #591bb7;
    font-weight: 600;
  }
  .navbar-title {
    font-size: 35rpx;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }
  .return-icon {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    left: 30rpx;
    bottom: 17rpx;
  }
  
  /* 删除全部按钮 */
  .delete-all-btn {
    position: fixed;
    bottom: 40rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 250rpx;
    height: 80rpx;
    background: #ff4a4a;
    border-radius: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8rpx 20rpx rgba(247, 47, 47, 0.3);
    z-index: 1001;
  }
  
  .delete-btn-text {
    color: #fff;
    font-size: 32rpx;
    font-weight: 600;
  }
  
  .card-scroll {
    max-height: calc(100vh - 340rpx); /* 导航栏高度 */
  }
    
    /* 订阅列表容器 */
    .subscription-container {
      padding: 200rpx 30rpx 140rpx;
    }
  
    /* 空状态样式 */
    .empty-subscription {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 100rpx 0;
    }
    .empty-icon {
      width: 200rpx;
      margin-bottom: 20rpx;
    }
    .empty-text {
      font-size: 30rpx;
      font-weight: 500;
      margin-bottom: 10rpx;
    }
    .empty-tip {
      font-size: 24rpx;
      color: #999;
    }
    
    /* 订阅项布局（单条删除按钮+卡片） */
    .subscription-item {
      display: flex;
      flex-direction: column;
      gap: 16rpx;
    }
  