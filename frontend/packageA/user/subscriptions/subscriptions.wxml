<!-- 自定义导航栏 -->
<view class="custom-navbar">
  <!-- 返回上一页按钮 -->
  <image class="return-icon" bindtap="goBack" src="/assets/icons/return.svg"></image>
  <view class="navbar-title">我的订阅</view>
</view>

<!-- 订阅列表容器（不变） -->
<view class="subscription-container">
  <!-- 空状态（不变） -->
  <view wx:if="{{subscriptionList.length === 0}}" class="empty-subscription">
    <image src="/assets/icons/subscription-empty.svg" class="empty-icon" mode="widthFix"></image>
    <text class="empty-text">暂无订阅</text>
    <text class="empty-tip">点击公众号卡片的订阅按钮添加</text>
  </view>

  <!-- 用 account-card 渲染测试数据，隐藏订阅按钮 -->
  <view wx:else class="subscription-list">
    <scroll-view class="card-scroll" scroll-y="true">
      <block wx:for="{{subscriptionList}}" wx:key="id">
        <view class="subscription-item">
          <!-- 公众号卡片 -->
          <account-card class="card-component-{{index}}" accountId="{{item.public_account.id}}" name="{{item.public_account.name}}" avatar="{{item.public_account.icon}}" isSubscribed="{{item.id}}" show-subscribe-btn="{{false}}" />
        </view>
      </block>
    </scroll-view>
  </view>
</view>

<view class="delete-all-btn" bindtap="deleteAllSubscriptions">
  <text class="delete-btn-text">删除全部</text>
</view>