page {
  background-color: rgba(239, 239, 239, 0.6);
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.custom-navbar {
  position: fixed;
  width: 100%;
  height: 170rpx;
  background: #ffffff;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  z-index: 1000;
  color: #591bb7;
  font-weight: 600;
}

.navbar-title {
  font-size: 35rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.return-icon {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 30rpx;
  bottom: 17rpx;
}

/* 内容区域 */
.help-content {
  margin-top: 170rpx;
  flex: 1;
  overflow: hidden;
}

.help-scroll {
  height: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}

.help-section {
  margin-bottom: 40rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx 30rpx 15rpx 30rpx;
  box-sizing: border-box;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #591bb7;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.section-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.8;
  margin-bottom: 15rpx;
  text-align: justify;
}

.text-bold {
  font-weight: 600;
  color: #591bb7;
}

.help-footer {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  text-align: center;
}

.footer-text {
  font-size: 32rpx;
  color: #591bb7;
  font-weight: 600;
}