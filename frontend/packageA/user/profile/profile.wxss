page {
  background-color: rgba(239, 239, 239, 0.6);
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.custom-navbar {
  position: fixed;
  width: 100%;
  height: 170rpx;
  background: #ffffff;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  z-index: 1000;
  color: #591bb7;
  font-weight: 600;
}

.navbar-title {
  font-size: 35rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.return-icon {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 30rpx;
  bottom: 17rpx;
}

/* 容器 */
.profile-container {
  padding: 200rpx 30rpx 40rpx;
  flex: 1;
}

/* 头像区域 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  background: linear-gradient(90deg, #7b2ff7 0%, #9c4dff 100%);
  padding: 40rpx 30rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.avatar-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 24rpx;
  border: 4rpx solid #f0f2f5;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
  background-color: #fff;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  letter-spacing: 0.5rpx;
}

/* 信息列表 */
.info-list {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f0f2f5;
  transition: background-color 0.2s;
}

.info-item:last-child {
  border-bottom: none;
}

.info-item:active {
  background-color: #fafafa;
}

.info-label {
  font-size: 30rpx;
  color: #666;
  font-weight: 500;
}

.info-value {
  font-size: 30rpx;
  color: #1a1a1a;
  font-weight: 400;
  max-width: 80%;
  text-align: right;
  word-break: break-all;
}

/* 修改按钮 */
.edit-btn {
  display: flex;
  justify-content: center;
  padding: 24rpx 30rpx;
  background: linear-gradient(135deg, #7b2ff7, #9b5cf6);
  color: #fff;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(123, 47, 247, 0.3);
  transition: all 0.3s ease;
}

.edit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(123, 47, 247, 0.4);
}