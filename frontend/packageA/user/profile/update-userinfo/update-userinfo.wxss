page {
  background-color: rgba(239, 239, 239, 0.6);
  height: 100vh;
}

/* 顶部导航栏 */
.custom-navbar {
  position: fixed;
  width: 100%;
  height: 170rpx;
  background: #ffffff;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  z-index: 100;
  color: #591bb7;
  font-weight: 600;
}

.navbar-title {
  font-size: 35rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.return-icon {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 30rpx;
  bottom: 17rpx;
}

/* 个人信息列表 */
.info-list {
  padding: 200rpx 30rpx 40rpx;
  display: flex;
  flex-direction: column;
  gap: 1rpx;
  /* 分割线效果 */
}

.info-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background-color: #fff;
}

.info-item:first-child {
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
}

.info-item:last-child {
  border-bottom-left-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
}

.info-label {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
}

.info-content {
  display: flex;
  align-items: center;
  gap: 15rpx;
  flex: 1;
  min-width: 0;
  justify-content: flex-end;
}

.info-content text {
  font-size: 28rpx;
  color: #666;
  word-wrap: break-word;
  word-break: break-all;
  text-align: right;
  line-height: 1.5;
  max-width: 60vw;
}

.avatar-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  object-fit: cover;
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
  color: #ccc;
  flex-shrink: 0;
}

/* 悬浮窗遮罩层 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

/* 悬浮窗内容区 */
.modal-content {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  z-index: 1001;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.modal-input-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.modal-input {
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.avatar-modal-body {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
  margin-bottom: 30rpx;
}

.modal-avatar-preview {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  object-fit: cover;
  border: 2rpx solid #eee;
}

.choose-avatar-btn {
  padding: 20rpx 40rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.modal-btn-group {
  display: flex;
  gap: 20rpx;
}

.modal-cancel-btn,
.modal-confirm-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.modal-cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.modal-confirm-btn {
  background-color: #7b2ff7;
  color: #fff;
}

.modal-cancel-btn::after,
.modal-confirm-btn::after {
  border: none;
}

/* 密码强度提示 */
.password-strength {
  padding: 10rpx;
  font-size: 24rpx;
  color: #999;
}

.strength-tip-item {
  margin-bottom: 8rpx;
}