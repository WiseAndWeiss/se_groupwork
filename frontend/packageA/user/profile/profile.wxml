<!-- 自定义导航栏 -->
<view class="custom-navbar">
  <!-- 返回上一页按钮 -->
  <image class="return-icon" bindtap="goBack" src="/assets/icons/return.svg"></image>
  <view class="navbar-title">个人资料</view>
</view>

<!-- 用户信息展示区域 -->
<view class="profile-container">
  <!-- 头像+昵称 -->
  <view class="avatar-section">
    <image 
      class="avatar-img" 
      src="{{userInfo.avatar || '/assets/icons/default-avatar.png'}}" 
      mode="aspectFill"
    ></image>
    <view class="nickname">{{userInfo.username || '未设置'}}</view>
  </view>

  <!-- 信息列表 -->
  <view class="info-list">
    <view class="info-item">
      <view class="info-label">邮箱</view>
      <view class="info-value">{{userInfo.email || '未设置'}}</view>
    </view>
    <view class="info-item">
      <view class="info-label">手机号</view>
      <view class="info-value">{{userInfo.phone_number || '未设置'}}</view>
    </view>
  </view>

  <!-- 修改按钮 -->
  <button class="edit-btn" bindtap="goToUpdateUserInfo">修改信息</button>
</view>