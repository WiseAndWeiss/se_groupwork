/* ================= 全局样式配置 ================= */
page {
    /* 主题变量：统一管理，方便换肤/维护 */
    --primary-color: #591bb7;
    --primary-light: #6a27c5;
    --primary-dark: #401488;
    --danger-color: #ff4444;
    --text-main: #333;
    --text-secondary: #666;
    --text-light: #999;
    --bg-main: #f8f8f8;
    --bg-white: #ffffff;
    --border-color: #eee;
    --border-light: #f5f5f5;
    --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4rpx 30rpx rgba(0, 0, 0, 0.15);
    
    /* 通用尺寸变量 */
    --navbar-height: 170rpx;
    --tabbar-height: 88rpx;
    --hour-cell-height: 70rpx;
    --date-header-height: 60rpx;
    
    margin: 0;
    padding: 0;
    font-size: 28rpx;
    color: var(--text-main);
    background-color: var(--bg-main);
    line-height: 1.5;
  }
  
  /* 基础重置 */
  button, input, textarea, scroll-view {
    margin: 0;
    padding: 0;
    border: none;
    outline: none;
    box-sizing: border-box;
  }
  
  button {
    background: none;
    font-size: inherit;
    color: inherit;
  }
  
  button::after {
    border: none;
  }
  
  /* 核心布局  */
  .todo-calendar-page {
    height: 100vh;
    display: flex;
    flex-direction: column;
    padding-bottom: var(--tabbar-height);
    box-sizing: border-box;
    background-color: var(--bg-main);
    /* 移除overflow: hidden，避免影响fixed定位 */
    overflow: visible;
  }
  
  .calendar-container {
    flex: 1;
    padding: 20rpx;
    box-sizing: border-box;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch; /* 优化iOS滚动体验 */
  }
  
  /* 视图切换动画 */
  .view-animate {
    animation: viewFade 0.4s ease-out forwards;
    width: 100%;
  }
  
  @keyframes viewFade {
    0% {
      opacity: 0;
      transform: scale(0.98) translateY(10rpx);
    }
    100% {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }
  
  /* 自定义导航栏  */
  .custom-navbar {
    position: relative;
    height: var(--navbar-height);
    background-color: var(--bg-white);
    display: flex;
    align-items: flex-end;
    padding: 0 30rpx 20rpx 30rpx;
    box-sizing: border-box;
    z-index: 1000;
    color: var(--primary-color);
    font-weight: 600;
  }
  
  .navbar-title {
    font-size: 35rpx;
    margin: 0 auto;
  }
  
  .return-icon {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    left: 30rpx;
    bottom: 17rpx;
    transition: transform 0.2s ease;
  }
  
  .return-icon:active {
    transform: scale(0.9);
  }
  
  /* 年视图样式  */
  .year-nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10rpx 0;
    margin-bottom: 20rpx;
    font-size: 30rpx;
  }
  
  .year-nav-btn {
    color: var(--primary-color);
    font-size: 26rpx;
    padding: 5rpx 10rpx;
    transition: color 0.2s ease;
  }
  
  .year-nav-btn:active {
    color: var(--primary-dark);
  }
  
  .year-nav-title {
    font-weight: 600;
    color: var(--text-main);
  }
  
  .year-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 15rpx;
  }
  
  .year-month-item {
    width: calc(33.333% - 10rpx);
    box-sizing: border-box;
    background-color: var(--bg-white);
    border-radius: 8rpx;
    padding: 10rpx;
    box-shadow: var(--shadow-sm);
    cursor: pointer;
    transition: transform 0.2s ease;
  }
  
  .year-month-item:active {
    transform: scale(0.98);
  }
  
  .year-month-title {
    font-size: 28rpx;
    font-weight: 600;
    color: var(--primary-color);
    text-align: center;
    margin-bottom: 10rpx;
  }
  
  .year-week-header {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    font-size: 20rpx;
    color: var(--text-light);
    margin-bottom: 5rpx;
  }
  
  .year-week-header > view {
    width: calc(100% / 7);
    text-align: center;
    box-sizing: border-box;
  }
  
  .year-date-list {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
  }
  
  .year-date-item {
    width: calc(100% / 7);
    text-align: center;
    padding: 5rpx 0;
    font-size: 22rpx;
    border-radius: 4rpx;
    transition: background-color 0.2s ease;
    box-sizing: border-box;
  }
  
  .year-date-item.current-date {
    color: var(--danger-color);
    font-weight: 600;
  }
  
  .year-date-item.selected-date {
    background-color: var(--primary-color);
    color: var(--bg-white);
    border-radius: 50%;
  }
  
  /*  月视图样式  */
  .month-nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10rpx 0;
    margin-bottom: 10rpx;
    font-size: 30rpx;
  }
  
  .month-nav-btn {
    color: var(--primary-color);
    font-size: 26rpx;
    padding: 5rpx 10rpx;
    transition: color 0.2s ease;
  }
  
  .month-nav-btn:active {
    color: var(--primary-dark);
  }
  
  .month-nav-title {
    font-weight: 600;
    color: var(--text-main);
  }
  
  .week-header {
    display: flex;
    margin-bottom: 10rpx;
    width: 100%;
  }
  
  .week-header-item {
    flex: 1;
    text-align: center;
    font-size: 24rpx;
    color: var(--text-secondary);
  }
  
  .date-list {
    display: flex;
    flex-wrap: wrap;
    gap: 5rpx;
    width: 100%;
    margin-bottom: 20rpx;
  }
  
  .date-item {
    width: calc(14.28% - 5rpx);
    height: 120rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: 8rpx;
    background-color: var(--bg-white);
    font-size: 24rpx;
    color: var(--text-secondary);
    box-sizing: border-box;
    padding: 5rpx;
    transition: background-color 0.2s ease, transform 0.2s ease;
    flex-shrink: 0;
  }
  
  .date-item:active {
    transform: scale(0.95);
  }
  
  .date-day {
    font-size: 28rpx;
    margin-bottom: 5rpx;
  }
  
  .date-week {
    font-size: 20rpx;
    color: var(--text-light);
    margin-bottom: 5rpx;
  }
  
  .date-item.current-date {
    border: 2rpx solid var(--danger-color);
    color: var(--text-secondary);
  }
  
  .date-item.selected-date {
    background-color: var(--primary-color);
    color: var(--bg-white) !important;
  }
  
  .date-item.selected-date .date-week {
    color: var(--bg-white) !important;
  }
  
  /*  周视图 */
  .week-container {
    display: flex;
    height: 100%;
    background-color: var(--bg-white);
    border-radius: 8rpx;
    overflow: hidden;
    min-height: calc(24 * var(--hour-cell-height)); /* 24小时高度，保证对齐 */
    width: 100%;
    position: relative;
  }
  
  /* 左侧时间轴 */
  .time-axis {
    width: 100rpx;
    border-right: 1rpx solid var(--border-color);
    background-color: var(--bg-main);
    flex-shrink: 0;
    padding-top: var(--date-header-height);
    box-sizing: border-box;
    height: 100%;
    overflow: hidden;
  }
  
  .time-axis-item {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 22rpx;
    color: var(--text-secondary);
    border-bottom: 1rpx solid var(--border-light);
    box-sizing: border-box;
    height: var(--hour-cell-height);
    position: relative;
  }
  
  .time-text {
    display: block;
    text-align: center;
  }
  
  /* 右侧日期包裹层 */
  .week-date-wrapper {
    flex: 1;
    display: flex;
    flex-direction: column;
    height: 100%;
    width: calc(100% - 100rpx);
  }
  
  /* 日期栏*/
  .week-date-header {
    display: flex;
    height: var(--date-header-height);
    border-bottom: 1rpx solid var(--border-color);
    background-color: #fafafa;
    flex-shrink: 0;
  }
  
  .week-date-header .date-header {
    flex: 1;
    height: 100%;
    border-right: 1rpx solid var(--border-color);
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    transition: background-color 0.2s ease;
    cursor: pointer;
  }
  
  .week-date-header .date-header:last-child {
    border-right: none;
  }
  
  .date-header.current-date {
    border: 1rpx solid var(--danger-color);
    color: var(--danger-color);
    font-weight: 600;
  }
  
  .date-header.selected-date {
    background-color: var(--primary-color);
    color: var(--bg-white) !important;
  }
  
  /* 日期时间内容 */
  .week-date-content {
    flex: 1;
    display: flex;
    height: calc(100% - var(--date-header-height));
    overflow-x: hidden;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
  }
  
  /* 日期列 */
  .date-column {
    flex: 1;
    width: calc(100% / 7);
    border-right: 1rpx solid var(--border-color);
    box-sizing: border-box;
    min-width: 0;
    height: 100%;
  }
  
  .date-column:last-child {
    border-right: none;
  }
  
  /* 日期时间表格 */
  .date-body {
    height: 100%;
    width: 100%;
  }
  
  /* 时间单元格 */
  .time-cell {
    border-bottom: 1rpx solid var(--border-color);
    position: relative;
    box-sizing: border-box;
    height: var(--hour-cell-height);
    background-color: var(--bg-white);
    width: 100%;
  }
  
  /* 周视图待办条 */
  .week-schedule-bar {
    position: absolute;
    left: 2rpx;          
    width: calc(100% - 4rpx); 
    background-color: var(--primary-color);
    border-radius: 6rpx;
    opacity: 0.85;
    transition: all 0.2s ease;
    padding: 6rpx 6rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    overflow: hidden;
    z-index: 10;
  }
  
  .week-schedule-bar:active {
    opacity: 1;
    transform: scale(0.98);
    background-color: var(--primary-dark);
  }
  
  .schedule-title {
    color: var(--bg-white);
    font-size: 20rpx;
    white-space: normal;
    word-wrap: break-word;
    line-height: 1.4;
    font-weight: 500;
    margin-bottom: 4rpx;
  }
  
  .schedule-time {
    color: #f0f0f0;
    font-size: 18rpx;
    line-height: 1.2;
  }
  
  /*  全部日程样式  */
  .all-todo-container {
    background-color: var(--bg-white);
    border-radius: 8rpx;
    padding: 20rpx;
    box-shadow: var(--shadow-sm);
  }
  
  .all-todo-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
    padding-bottom: 10rpx;
    border-bottom: 1rpx solid var(--border-color);
  }
  
  .all-todo-title {
    font-size: 32rpx;
    font-weight: 600;
    color: var(--text-main);
  }
  
  .inline-add-btn {
    padding: 8rpx 16rpx;
    font-size: 24rpx;
  }
  
  .all-todo-list {
    margin-top: 10rpx;
  }
  
  /*  待办列表样式 */
  .todo-list-wrap {
    margin-top: 30rpx;
    padding: 0 10rpx;
    width: 100%;
  }
  
  .add-todo-btn-wrap {
    margin: 20rpx 10rpx;
    text-align: right;
    width: 100%;
  }
  
  .add-todo-btn {
    background-color: var(--primary-color);
    color: var(--bg-white);
    border-radius: 8rpx;
    padding: 10rpx 20rpx;
    font-size: 28rpx;
    transition: all 0.2s ease;
  }
  
  .add-todo-btn:active {
    background-color: var(--primary-dark);
    transform: scale(0.98);
  }
  
  .empty-tip {
    text-align: center;
    font-size: 28rpx;
    color: var(--text-light);
    padding: 40rpx 0;
    background: var(--bg-white);
    border-radius: 8rpx;
    margin: 10rpx 0;
    box-shadow: var(--shadow-sm);
  }
  
  /*  底部切换栏  */
  .fixed-bottom {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 999;
    background-color: var(--bg-white);
    border-top: 1rpx solid var(--border-color);
  }
  
  .view-switch-bar {
    display: flex;
    background-color: var(--bg-white);
  }
  
  .switch-btn {
    flex: 1;
    height: var(--tabbar-height);
    line-height: var(--tabbar-height);
    padding: 0;
    margin: 0;
    font-size: 28rpx;
    color: var(--text-secondary);
    transition: color 0.2s ease;
  }
  
  .switch-btn.active {
    color: var(--primary-color);
    font-weight: 600;
    position: relative;
  }
  
  .switch-btn.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 40rpx;
    height: 4rpx;
    background-color: var(--primary-color);
    border-radius: 2rpx;
    animation: tabActive 0.3s ease-out forwards;
  }
  
  @keyframes tabActive {
    0% { width: 0; }
    100% { width: 40rpx; }
  }
  
  /*  弹窗通用样式 */
  .modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 9999; /* 提升层级，确保覆盖所有内容 */
    animation: maskFade 0.3s ease-out forwards;
  }
  
  .modal-container {
    position: fixed;
    /* 核心：基于视口50%定位，再偏移自身50% */
    top: 50vh;
    left: 50vw;
    transform: translate(-50%, -50%);
    width: 80%;
    max-width: 600rpx;
    background: var(--bg-white);
    border-radius: 12rpx;
    z-index: 10000;
    padding: 30rpx;
    box-sizing: border-box;
    box-shadow: var(--shadow-md);
    animation: modalPop 0.3s ease-out forwards;
    /* 防止超出视口 */
    max-height: 90vh;
    overflow-y: auto;
    box-sizing: border-box;
  }
  
  @keyframes modalPop {
    0% {
      opacity: 0;
      transform: translate(-50%, -45%) scale(0.95);
    }
    100% {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1);
    }
  }
  
  .modal-content {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
  }
  
  .modal-item {
    display: flex;
    flex-direction: column;
    gap: 10rpx;
  }
  
  .modal-label {
    font-size: 28rpx;
    color: var(--text-main);
    font-weight: 500;
  }
  
  .modal-input {
    padding: 15rpx;
    border: 1rpx solid var(--border-color);
    border-radius: 8rpx;
    font-size: 26rpx;
    transition: border-color 0.2s ease;
  }
  
  .modal-input:focus {
    border-color: var(--primary-color);
  }
  
  .desc-input {
    min-height: 120rpx;
    resize: none;
  }
  
  .modal-btn-group {
    display: flex;
    justify-content: space-between;
    margin-top: 20rpx;
  }
  
  .add-todo-btn-group {
    justify-content: flex-end;
    gap: 20rpx;
  }
  
  .modal-btn {
    padding: 15rpx 30rpx;
    border-radius: 8rpx;
    font-size: 28rpx;
    transition: all 0.2s ease;
  }
  
  .modal-btn:active {
    transform: scale(0.98);
  }
  
  .cancel-btn {
    background-color: var(--border-color);
    color: var(--text-secondary);
  }
  
  .cancel-btn:active {
    background-color: #e0e0e0;
  }
  
  .confirm-btn {
    background-color: var(--primary-color);
    color: var(--bg-white);
  }
  
  .confirm-btn:active {
    background-color: var(--primary-dark);
  }
  
  .placeholder-style {
    color: var(--text-light);
  }
  
  /*  待办详情弹窗样式 */
  .todo-popup-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 9998; 
    animation: maskFade 0.2s ease-out forwards;
  }
  
  .todo-popup {
    position: fixed;
    /* 核心：基于视口50%定位，再偏移自身50% */
    top: 50vh;
    left: 50vw;
    transform: translate(-50%, -50%);
    width: 80%;
    max-width: 600rpx;
    min-width: 400rpx;
    background: var(--bg-white);
    border-radius: 12rpx;
    box-shadow: var(--shadow-md);
    z-index: 9999;
    padding: 10rpx 0;
    animation: popupFade 0.2s ease-out forwards;
    /* 防止超出视口 */
    max-height: 90vh;
    /* 小程序兼容：强制脱离文档流 */
    box-sizing: border-box;
  }
  
  @keyframes popupFade {
    0% {
      opacity: 0;
      transform: translate(-50%, -45%) scale(0.95);
    }
    100% {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1);
    }
  }
  
  .popup-header {
    padding: 10rpx 16rpx;
    border-bottom: 1rpx solid var(--border-color);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .popup-title {
    font-size: 28rpx;
    font-weight: 600;
    color: var(--text-main);
  }
  
  .popup-close {
    font-size: 32rpx;
    color: var(--text-light);
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    transition: color 0.2s ease;
  }
  
  .popup-close:active {
    color: var(--primary-color);
  }
  
  .popup-content {
    padding: 12rpx 16rpx;
    max-height: 70vh;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
  }
  
  /* ================= 滚动条优化 ================= */
  ::-webkit-scrollbar {
    width: 4rpx;
    height: 4rpx;
  }
  
  ::-webkit-scrollbar-track {
    background: var(--border-light);
    border-radius: 2rpx;
  }
  
  ::-webkit-scrollbar-thumb {
    background: #ccc;
    border-radius: 2rpx;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: var(--text-light);
  }
  
  /* ================= 响应式适配 ================= */
  @media (max-width: 750rpx) {
    .todo-popup {
      width: 90%;
      min-width: unset;
    }
    
    .modal-container {
      width: 90%;
    }
    
    .year-month-item {
      width: calc(50% - 7.5rpx);
    }
    
    .date-item {
      height: 100rpx;
    }
    
    .switch-btn {
      font-size: 26rpx;
    }
  }
  
  /* 适配小屏手机 */
  @media (max-height: 667px) {
    .week-container {
      min-height: calc(20 * var(--hour-cell-height));
    }
    
    .popup-content {
      max-height: 50vh;
    }
    
    .modal-container {
      max-height: 85vh;
    }
  }