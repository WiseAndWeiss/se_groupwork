/*  月视图样式  */
.month-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
  margin-bottom: 10rpx;
  font-size: 30rpx;
}

.month-nav-btn {
  color: var(--primary-color);
  font-size: 26rpx;
  padding: 5rpx 10rpx;
  transition: color 0.2s ease;
}

.month-nav-btn:active {
  color: var(--primary-dark);
}

.month-nav-title {
  font-weight: 600;
  color: var(--text-main);
}

.week-header {
  display: flex;
  margin-bottom: 10rpx;
  width: 100%;
}

.week-header-item {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.date-list {
  display: flex;
  flex-wrap: wrap;
  gap: 5rpx;
  width: 100%;
  margin-bottom: 20rpx;
}

.date-item {
  width: calc(14.28% - 5rpx);
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  background-color: var(--bg-white);
  font-size: 24rpx;
  color: var(--text-secondary);
  box-sizing: border-box;
  padding: 5rpx;
  transition: background-color 0.2s ease, transform 0.2s ease;
  flex-shrink: 0;
}

/* 空的日期项：透明度为0，保持布局 */
.date-item.empty-date {
  opacity: 0;
  pointer-events: none;
  /* 禁用点击事件 */
}

.date-item:active {
  transform: scale(0.95);
}

.date-day {
  font-size: 28rpx;
  margin-bottom: 5rpx;
}

.date-week {
  font-size: 20rpx;
  color: var(--text-light);
  margin-bottom: 5rpx;
}

.date-item.current-date {
  background-color: var(--primary-color);
  color: var(--bg-white) !important;
}

.date-item.current-date .date-week {
  color: var(--bg-white) !important;
}

.date-item.selected-date {
  border: 2rpx solid var(--primary-color);
  color: var(--text-secondary);
}

/* 同时是本日和选中时，优先显示本日的紫色填充 */
.date-item.current-date.selected-date {
  background-color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
  color: var(--bg-white) !important;
}

.date-item.current-date.selected-date .date-week {
  color: var(--bg-white) !important;
}

/*  周视图 */
.week-container {
  display: flex;
  height: 100%;
  background-color: var(--bg-white);
  border-radius: 8rpx;
  overflow: hidden;
  min-height: calc(24 * var(--hour-cell-height));
  /* 24小时高度，保证对齐 */
  width: 100%;
  position: relative;
}

/* 左侧时间轴 */
.time-axis {
  width: 100rpx;
  border-right: 1rpx solid var(--border-color);
  background-color: var(--bg-main);
  flex-shrink: 0;
  padding-top: 110rpx;
  box-sizing: border-box;
  height: 100%;
  overflow: hidden;
}

.time-axis-item {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: var(--text-secondary);
  border-bottom: 1rpx solid var(--border-light);
  box-sizing: border-box;
  height: var(--hour-cell-height);
  position: relative;
}

.time-text {
  display: block;
  text-align: center;
  padding-bottom: 60rpx;
}

/* 右侧日期包裹层 */
.week-date-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 100%;
  width: calc(100% - 100rpx);
}

/* 日期栏*/
.week-date-header {
  display: flex;
  height: 110rpx;
  border-bottom: 1rpx solid var(--border-color);
  background-color: #fafafa;
  flex-shrink: 0;
  padding-right: 0rpx;
}

.week-date-header .date-header {
  flex: 1;
  height: 110rpx;
  border-right: 2rpx solid var(--border-color);
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  padding: 12rpx 0;
  border-radius: 16rpx;
  transition: background-color 0.2s ease;
  cursor: pointer;
  margin-right: 4rpx;
}

.week-date-header .date-header:last-child {
  margin-right: 0;
}

.week-date-header .date-header .date-week {
  font-size: 26rpx;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.week-date-header .date-header .date-day {
  font-size: 28rpx;
  font-weight: 600;
}

.date-header.current-date {
  background-color: var(--primary-color);
  color: var(--bg-white) !important;
  font-weight: 600;
}

.date-header.current-date .date-week,
.date-header.current-date .date-day {
  color: var(--bg-white) !important;
}

.date-header.selected-date {
  border: 2rpx solid var(--primary-color);
  color: var(--text-secondary);
}

/* 同时是当天和选中时，优先显示当天的紫色填充 */
.date-header.current-date.selected-date {
  background-color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
  color: var(--bg-white) !important;
}

.date-header.current-date.selected-date .date-week,
.date-header.current-date.selected-date .date-day {
  color: var(--bg-white) !important;
}

/* 日期时间内容 */
.week-date-content {
  flex: 1;
  display: flex;
  height: calc(100% - 110rpx);
  overflow-x: hidden;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* 日期列 */
.date-column {
  flex: 1;
  width: calc(100% / 7);
  border-right: 1rpx solid var(--border-color);
  box-sizing: border-box;
  min-width: 0;
  height: 100%;
}

.date-column:last-child {
  border-right: none;
}

/* 日期时间表格 */
.date-body {
  height: 100%;
  width: 100%;
}

/* 时间单元格 */
.time-cell {
  border-bottom: 1rpx solid var(--border-color);
  position: relative;
  box-sizing: border-box;
  height: var(--hour-cell-height);
  background-color: var(--bg-white);
  width: 100%;
}

/* 周视图待办条 */
.week-schedule-bar {
  position: absolute;
  left: 2rpx;
  width: calc(100% - 4rpx);
  background-color: var(--primary-color);
  border-radius: 6rpx;
  opacity: 0.85;
  transition: all 0.2s ease;
  padding: 6rpx 6rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  overflow: hidden;
  z-index: 10;
}

.week-schedule-bar:active {
  opacity: 1;
  transform: scale(0.98);
  background-color: var(--primary-dark);
}

.schedule-title {
  color: var(--bg-white);
  font-size: 20rpx;
  white-space: normal;
  word-wrap: break-word;
  line-height: 1.4;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.schedule-time {
  color: #f0f0f0;
  font-size: 18rpx;
  line-height: 1.2;
}

/*  全部日程样式  */
.all-todo-container {
  background-color: var(--bg-white);
  border-radius: 8rpx;
  padding: 20rpx;
  box-shadow: var(--shadow-sm);
}

.all-todo-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 20rpx 20rpx 20rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.all-todo-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-main);
}

.inline-add-btn {
  padding: 8rpx 20rpx 10rpx;
  font-size: 24rpx;
  /* 继承 add-todo-btn 的样式 */
}

.all-todo-list {
  margin-top: 10rpx;
}

/*  待办列表样式 */
.todo-list-wrap {
  margin: 30rpx;
}

.add-todo-btn-wrap {
  margin: 20rpx 10rpx;
  text-align: center;
  width: 100%;
  /* 添加以下代码 */
  display: flex;
  justify-content: center;
  /* 水平居中 */
  align-items: center;
  /* 垂直居中 */
}

.add-todo-btn {
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 28rpx 14rpx;
  border-radius: 100rpx;
  background: linear-gradient(135deg, #7b2ff7 0%, #6a27d8 100%);
  box-shadow: 0 4rpx 12rpx rgba(123, 47, 247, 0.2);
  transition: all 0.25s ease;
  border: none;
  will-change: transform, box-shadow;
  height: 45rpx;
  width: 160rpx;
  /* 确保按钮内文字居中 */
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
}

.add-todo-btn:active {
  transform: scale(0.97);
  box-shadow: 0 2rpx 8rpx rgba(123, 47, 247, 0.3);
  /* 紫色系阴影加深 */
  background: linear-gradient(135deg, #6a27d8 0%, #591bb7 100%);
  /* 紫色加深 */
}

.empty-tip {
  text-align: center;
  font-size: 28rpx;
  color: var(--text-light);
  padding: 40rpx 0;
  background: var(--bg-white);
  border-radius: 24rpx;
  margin: 10rpx 0;
  box-shadow: var(--shadow-sm);
}

/*  底部切换栏  */
.fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 999;
  background-color: var(--bg-white);
  border-top: 1rpx solid var(--border-color);
}

.view-switch-bar {
  display: flex;
  background-color: var(--bg-white);
}

.switch-btn {
  flex: 1;
  height: var(--tabbar-height);
  line-height: var(--tabbar-height);
  padding: 0;
  margin: 0;
  font-size: 28rpx;
  color: var(--text-secondary);
  transition: color 0.2s ease;
}

.switch-btn.active {
  color: var(--primary-color);
  font-weight: 600;
  position: relative;
}

.switch-btn.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: var(--primary-color);
  border-radius: 2rpx;
  animation: tabActive 0.3s ease-out forwards;
}

@keyframes tabActive {
  0% {
    width: 0;
  }

  100% {
    width: 40rpx;
  }
}

/* ========== 待办弹窗样式（优化卡顿+确定按钮改为紫色，与card组件一致） ========== */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 2002;
  animation: fadeIn 0.25s ease-out;
  /* 缩短动画时长，更流畅 */
  will-change: opacity;
  /* 提示浏览器优化 */
  /* 避免mask重绘卡顿 */
  pointer-events: auto;
  backface-visibility: hidden;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

.modal-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 85%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 30rpx;
  z-index: 2003;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  /* 核心优化：解决卡顿 */
  animation: slideUpModal 0.25s cubic-bezier(0.34, 1.56, 0.64, 1);
  /* 更顺滑的缓动函数 */
  will-change: transform, opacity;
  /* 预告知浏览器动画属性 */
  backface-visibility: hidden;
  /* 开启GPU加速 */
  transform: translate(-50%, -50%) translate3d(0, 0, 0);
  /* 强制GPU渲染 */
  /* 防止超出视口 */
  max-height: 90vh;
  overflow-y: auto;
  box-sizing: border-box;
}

/* 优化弹窗动画：改用translate3d，缓动函数更顺滑 */
@keyframes slideUpModal {
  from {
    opacity: 0;
    transform: translate(-50%, -50%) translate3d(0, 30rpx, 0);
  }

  to {
    opacity: 1;
    transform: translate(-50%, -50%) translate3d(0, 0, 0);
  }
}

.modal-content {
  padding: 30rpx;
}

.modal-item {
  margin-bottom: 24rpx;
}

.modal-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 600;
}

/* 标题输入栏加高 */
.modal-input {
  width: 100%;
  padding: 22rpx 20rpx;
  min-height: 88rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  transition: border-color 0.2s;
  line-height: 1.5;
  /* 优化输入框渲染 */
  backface-visibility: hidden;
}

/* 内容输入框单独调整 */
.desc-input {
  min-height: 120rpx;
  padding: 18rpx 20rpx;
  line-height: 1.3;
  resize: none;
  vertical-align: top;
  /* 确保文本从顶部对齐 */
}

/* 内容输入框的placeholder样式 */
.content-placeholder-style {
  color: #999;
  line-height: 1.6;
  /* 与输入框的line-height保持一致 */
  vertical-align: top;
  /* 确保placeholder从顶部对齐 */
}

/* 聚焦色改为紫色，统一视觉 */
.modal-input:focus {
  border-color: #7b2ff7;
  outline: none;
}

.modal-btn-group {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.add-todo-btn-group {
  justify-content: flex-end;
}

.modal-btn {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  font-weight: 550;
  transition: all 0.25s ease;
  will-change: transform, background;
  /* 优化点击动画 */
}

.cancel-btn {
  background: #f8f8f8;
  color: #666;
  border: 2rpx solid #e8e8e8;
}

.cancel-btn:active {
  background: #f0f0f0;
  transform: scale(0.97);
}

/* ========== 确定按钮：改为紫色系，与添加待办完全一致 ========== */
.confirm-btn {
  background: linear-gradient(135deg, #7b2ff7 0%, #6a27d8 100%);
  /* 紫色渐变 */
  box-shadow: 0 4rpx 12rpx rgba(123, 47, 247, 0.2);
  /* 紫色系阴影 */
  color: #fff;
  border: none;
}

.confirm-btn:active {
  background: linear-gradient(135deg, #6a27d8 0%, #591bb7 100%);
  /* 紫色加深 */
  box-shadow: 0 2rpx 8rpx rgba(123, 47, 247, 0.3);
  /* 阴影加深 */
  transform: scale(0.97);
}

.placeholder-style {
  color: #999;
  line-height: 1.5;
  /* 与input的line-height保持一致 */
}

/* 内容输入框的placeholder样式 */
.content-placeholder-style {
  color: #999;
  line-height: 1.6;
  /* 与textarea的line-height保持一致 */
}

/*  待办详情弹窗样式 */
.todo-popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9998;
  animation: maskFade 0.2s ease-out forwards;
}

.todo-popup {
  position: fixed;
  /* 核心：基于视口50%定位，再偏移自身50% */
  top: 50vh;
  left: 50vw;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 600rpx;
  min-width: 400rpx;
  background: var(--bg-white);
  border-radius: 24rpx;
  box-shadow: var(--shadow-md);
  z-index: 9999;
  animation: popupFade 0.2s ease-out forwards;
  /* 防止超出视口 */
  max-height: 90vh;
  /* 小程序兼容：强制脱离文档流 */
  box-sizing: border-box;
  overflow: hidden;
}

@keyframes popupFade {
  0% {
    opacity: 0;
    transform: translate(-50%, -45%) scale(0.95);
  }

  100% {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
}

.popup-header {
  padding: 10rpx 16rpx;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: rgba(239, 239, 239, 0.6);
  border-radius: 24rpx 24rpx 0 0;
}

.popup-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
  padding: 10rpx;
}

.popup-close {
  font-size: 32rpx;
  color: var(--text-light);
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  transition: color 0.2s ease;
}

.popup-close:active {
  color: var(--primary-color);
}

.popup-content-wrapper {
  height: 60vh;
  display: flex;
  flex-direction: column;
}

.popup-content {
  padding: 0 30rpx;
  height: 60vh;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  background-color: rgba(239, 239, 239, 0.6);
  border-radius: 0 0 24rpx 24rpx;
  /* 内容不足时不滚动 */
  overscroll-behavior: contain;
}

/* ================= 滚动条优化 ================= */
::-webkit-scrollbar {
  width: 4rpx;
  height: 4rpx;
}

::-webkit-scrollbar-track {
  background: var(--border-light);
  border-radius: 2rpx;
}

::-webkit-scrollbar-thumb {
  background: #ccc;
  border-radius: 2rpx;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--text-light);
}

/* ================= 响应式适配 ================= */
@media (max-width: 750rpx) {
  .todo-popup {
    width: 90%;
    min-width: unset;
  }

  .modal-container {
    width: 90%;
  }

  .year-month-item {
    width: calc(50% - 7.5rpx);
  }

  .date-item {
    height: 100rpx;
  }

  .switch-btn {
    font-size: 26rpx;
  }
}

/* 适配小屏手机 */
@media (max-height: 667px) {
  .week-container {
    min-height: calc(20 * var(--hour-cell-height));
  }

  .popup-content {
    max-height: 50vh;
  }

  .modal-container {
    max-height: 85vh;
  }
}