/* ================= 全局样式配置 ================= */
page {
  /* 主题变量：统一管理，方便换肤/维护 */
  --primary-color: #591bb7;
  --primary-light: #6a27c5;
  --primary-dark: #401488;
  --danger-color: #ff4444;
  --text-main: #333;
  --text-secondary: #666;
  --text-light: #999;
  --bg-main: #f8f8f8;
  --bg-white: #ffffff;
  --border-color: #eee;
  --border-light: #f5f5f5;
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4rpx 30rpx rgba(0, 0, 0, 0.15);

  /* 通用尺寸变量 */
  --navbar-height: 170rpx;
  --tabbar-height: 88rpx;
  --hour-cell-height: 70rpx;
  --date-header-height: 60rpx;

  margin: 0;
  padding: 0;
  font-size: 28rpx;
  color: var(--text-main);
  background-color: var(--bg-main);
  line-height: 1.5;
}

/* 基础重置 */
button,
input,
textarea,
scroll-view {
  margin: 0;
  padding: 0;
  border: none;
  outline: none;
  box-sizing: border-box;
}

button {
  background: none;
  font-size: inherit;
  color: inherit;
}

button::after {
  border: none;
}

/* 核心布局  */
.todo-calendar-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding-bottom: var(--tabbar-height);
  box-sizing: border-box;
  background-color: var(--bg-main);
  /* 移除overflow: hidden，避免影响fixed定位 */
  overflow: visible;
}

.calendar-container {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  /* 优化iOS滚动体验 */
}

/* 视图切换动画 */
.view-animate {
  animation: viewFade 0.4s ease-out forwards;
  width: 100%;
}

@keyframes viewFade {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}

/* 自定义导航栏  */
.custom-navbar {
  position: relative;
  height: var(--navbar-height);
  background-color: var(--bg-white);
  display: flex;
  align-items: flex-end;
  padding: 0 30rpx 20rpx 30rpx;
  box-sizing: border-box;
  z-index: 1000;
  color: var(--primary-color);
  font-weight: 600;
}

.navbar-title {
  font-size: 35rpx;
  margin: 0 auto;
}

.return-icon {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 30rpx;
  bottom: 17rpx;
  transition: transform 0.2s ease;
}

.return-icon:active {
  transform: scale(0.9);
}

/* 年视图样式  */
.year-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}

.year-nav-btn {
  color: var(--primary-color);
  font-size: 26rpx;
  padding: 5rpx 10rpx;
  transition: color 0.2s ease;
}

.year-nav-btn:active {
  color: var(--primary-dark);
}

.year-nav-title {
  font-weight: 600;
  color: var(--text-main);
}

.year-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 14rpx;
}

.year-month-item {
  width: calc(33.333% - 10rpx);
  /* 调整宽度计算 */
  box-sizing: border-box;
  background-color: var(--bg-white);
  border-radius: 24rpx;
  padding: 6rpx;
  padding-right: 2;
  /* 移除右侧padding */
  box-shadow: var(--shadow-sm);
  cursor: pointer;
  transition: transform 0.2s ease;
}

.year-month-item:active {
  transform: scale(0.98);
}

.year-month-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--primary-color);
  text-align: center;
  margin-bottom: 10rpx;
}

.year-week-header {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  font-size: 20rpx;
  color: var(--text-light);
  margin-bottom: 5rpx;
  margin-left: 5rpx;
  padding-bottom: 5rpx;
}

.year-week-header .week-header-text {
  text-align: center;
  box-sizing: border-box;
  padding: 1rpx;
  /* 左右各6rpx，形成间隔 */
}

.year-week-header .week-header-text:not(:last-child) {
  margin-right: 9rpx;
  /* 除了最后一个，右边都有间隔 */
}

.year-date-list {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.year-date-item {
  width: calc(100% / 7);
  aspect-ratio: 1 / 1;
  /* 设置为正方形 */
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  border-radius: 4rpx;
  transition: background-color 0.2s ease;
  box-sizing: border-box;
  padding: 3rpx 0 2rpx 0;
}

/* 空的日期项：透明度为0，保持布局 */
.year-date-item.empty-date {
  opacity: 0;
  pointer-events: none;
  /* 禁用点击事件 */
}

.year-date-item.current-date {
  color: #fff;
  font-weight: 600;
  background-color: var(--primary-color);
}

