page {
  background-color: rgba(239, 239, 239, 0.6);
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.custom-navbar {
  position: fixed;
  width: 100%;
  height: 170rpx;
  background: #ffffff;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  z-index: 1000;
  color: #591bb7;
  font-weight: 600;
}

.navbar-title {
  font-size: 35rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.return-icon {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 30rpx;
  bottom: 17rpx;
}

/* 联系方式容器 */
.contact-container {
  padding: 200rpx 30rpx 40rpx;
  flex: 1;
}

/* 提示卡片 */
.tip-card {
  background: linear-gradient(135deg, #f5f0ff 0%, #e8dfff 100%);
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: flex-start;
  box-shadow: 0 4rpx 16rpx rgba(123, 47, 247, 0.1);
  border-left: 4rpx solid #7b2ff7;
}

.tip-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 28rpx;
  color: #591bb7;
  line-height: 1.6;
  flex: 1;
}

.contact-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 30rpx;
  padding-left: 4rpx;
}

.contact-list {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 0 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
  margin-bottom: 30rpx;
}

.contact-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f0f2f5;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-label {
  font-size: 30rpx;
  color: #666;
  font-weight: 500;
}

.contact-value {
  font-size: 30rpx;
  color: #1a1a1a;
  font-weight: 400;
  max-width: 80%;
  text-align: right;
  word-break: break-all;
}