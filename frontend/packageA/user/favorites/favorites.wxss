page {
  background-color: rgba(239, 239, 239, 0.6);
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.custom-navbar {
  position: fixed;
  width: 100%;
  height: 170rpx;
  background: #ffffff;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  z-index: 1000;
  color: #591bb7;
  font-weight: 600;
}

.navbar-title {
  font-size: 35rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.return-icon-top {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 30rpx;
  bottom: 17rpx;
}

/* 添加收藏夹按钮（关键：避开导航栏，不被遮挡） */
.add-icon {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 320rpx;
  height: 80rpx;
  background: #7b2ff7;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(123, 47, 247, 0.3);
  z-index: 1001;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
}

.add-icon:active {
  transform: translateX(-50%) scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(123, 47, 247, 0.25);
}

/* 收藏列表容器（关键：避开导航栏和添加按钮） */
.favorites-container {
  padding: 200rpx 30rpx 140rpx;
  /* 底部留出空间，避免被遮挡 */
}

.card-scroll {
  max-height: calc(100vh - 340rpx);
  /* 导航栏高度 */
}

/* 空状态样式（适配收藏列表） */
.empty-collection {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  font-size: 30rpx;
  color: #999;
}

.empty-collection image {
  width: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

/* 浮窗遮罩 */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

/* 编辑浮窗主体 */
.edit-popup {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  max-height: 85vh;
  background: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  padding: 0;
  box-sizing: border-box;
  z-index: 1000;
  animation: slideUp 0.3s ease-out;
  display: flex;
  flex-direction: column;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 浮窗头部 */
.popup-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
  min-height: 45rpx;
}

/* 头部拖拽指示条 */
.popup-header::before {
  content: '';
  position: absolute;
  top: 16rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: #e0e0e0;
  border-radius: 3rpx;
}

/* 返回图标 - 固定在左上角 */
.return-icon {
  position: absolute;
  top: 25rpx;
  left: 30rpx;
  width: 50rpx;
  height: 50rpx;
  transition: transform 0.2s;
}

.return-icon:active {
  transform: scale(0.9);
}

/* 完成按钮 - 固定在右上角 */
.complete-btn {
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  font-size: 30rpx;
  color: #fff;
  background: linear-gradient(135deg, #7b2ff7 0%, #9d4edd 100%);
  font-weight: 500;
  padding: 12rpx 32rpx;
  border-radius: 30rpx;
  transition: all 0.2s;
  box-shadow: 0 4rpx 12rpx rgba(123, 47, 247, 0.3);
}

.complete-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(123, 47, 247, 0.25);
}

/* 浮窗内容区（自适应高度，可滚动） */
.popup-content {
  flex: 1;
  padding: 20rpx 30rpx 40rpx 30rpx;
  overflow-y: auto;
}

/* 表单项样式 */
.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  padding-left: 4rpx;
  font-weight: 600;
}

/* 输入框容器 */
.input-wrapper {
  width: 100%;
  display: flex;
  align-items: center;
  position: relative;
  background: #fff;
  border: 2rpx solid #e8e8e8;
  border-radius: 16rpx;
  transition: all 0.3s;
  min-height: 80rpx;
}

.input-wrapper:focus-within {
  border-color: #7b2ff7;
  box-shadow: 0 0 0 4rpx rgba(123, 47, 247, 0.1);
}

/* 文本域容器使用顶部对齐 */
.form-textarea {
  align-self: flex-start;
}

/* 名称输入框 */
.form-input {
  flex: 1;
  padding: 0 20rpx;
  padding-right: 80rpx;
  background: transparent;
  border: none;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #222;
  box-sizing: border-box;
  line-height: 1.5;
  height: 100%;
}

.form-input::placeholder {
  color: #bbb;
}

/* 描述输入框 */
.form-textarea {
  flex: 1;
  padding: 18rpx 20rpx;
  padding-right: 80rpx;
  background: transparent;
  border: none;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #222;
  min-height: 160rpx;
  box-sizing: border-box;
  line-height: 1.3;
  vertical-align: top;
}

/* 包含文本域的容器使用顶部对齐 - 通过父元素选择 */
.form-item .input-wrapper {
  align-items: center;
}

/* 通过相邻选择器调整包含 textarea 的容器 */
.form-item:nth-of-type(2) .input-wrapper {
  align-items: flex-start;
  min-height: auto;
}

.form-textarea::placeholder {
  color: #bbb;
  line-height: 1.6;
}

/* 剩余字数样式 */
.remain-count {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-40%);
  font-size: 24rpx;
  color: #999;
  pointer-events: none;
  font-weight: 400;
}

/* 文本域的剩余字数位置 - 在顶部 */
.form-textarea+.remain-count {
  top: 24rpx;
  transform: none;
}

/* 底部升起动画 */
@keyframes slideUp {
  from {
    transform: translateY(100%);
  }

  to {
    transform: translateY(0);
  }
}